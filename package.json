{
  "name": "@cassinodev/phaser-toolkit",
  "version": "0.1.0",
  "description": "A comprehensive toolkit for Phaser game development",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "node scripts/build-packages.js",
    "test": "pnpm -r test",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "ci": "pnpm install --frozen-lockfile && pnpm typecheck && pnpm lint && pnpm build && pnpm test",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:publish",
    "prepare": "husky install || true"
  },
  "keywords": [
    "phaser",
    "game-development",
    "javascript",
    "typescript",
    "monorepo",
    "toolkit"
  ],
  "author": "CassinoDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cassinodev/phaser-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/cassinodev/phaser-toolkit/issues"
  },
  "homepage": "https://github.com/cassinodev/phaser-toolkit#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "phaser-hooks": "link:packages/phaser-hooks",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "phaser-wind": "link:packages/phaser-wind"
  }
}
