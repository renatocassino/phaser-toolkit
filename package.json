{
  "name": "@cassinodev/phaser-toolkit",
  "version": "0.1.0",
  "description": "A comprehensive toolkit for Phaser game development",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm clear:tsbuildinfo && pnpm -r build && pnpm build:umd",
    "build:packages": "node scripts/build-packages.js",
    "build:umd": "node scripts/build-umd-rollup.js",
    "build:all": "pnpm build && pnpm build:umd",
    "serve:umd": "node scripts/serve-umd.js",
    "clear:tsbuildinfo": "find . -name \"tsconfig.tsbuildinfo\" -type f",
    "test": "pnpm -r test",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "validate": "pnpm -r validate",
    "clean": "pnpm -r clean && rm -rf umd",
    "ci": "pnpm install --frozen-lockfile && pnpm typecheck && pnpm lint && pnpm build && pnpm test",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build:all && pnpm changeset:publish"
  },
  "keywords": [
    "phaser",
    "game-development",
    "javascript",
    "typescript",
    "monorepo",
    "toolkit"
  ],
  "author": "CassinoDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cassinodev/phaser-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/cassinodev/phaser-toolkit/issues"
  },
  "homepage": "https://github.com/cassinodev/phaser-toolkit#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "phaser-hooks": "link:packages/phaser-hooks",
    "phaser-wind": "link:packages/phaser-wind",
    "prettier": "^3.1.0",
    "rollup": "^4.52.5",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "pnpm": {
    "overrides": {
      "phaser": "3.90.0"
    },
    "prefer-workspace-packages": true
  }
}
