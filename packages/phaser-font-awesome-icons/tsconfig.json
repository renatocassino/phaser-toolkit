{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": true,
    "allowImportingTsExtensions": false,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["dist", "node_modules", "**/*.test.*"]
}
