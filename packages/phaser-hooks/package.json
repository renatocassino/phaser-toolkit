{
  "name": "phaser-hooks",
  "version": "0.5.0",
  "description": "Hooks in react-style for Phaser games",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./umd": "./dist/phaser-hooks.js",
    "./umd.min": "./dist/phaser-hooks.min.js"
  },
  "files": [
    "dist"
  ],
  "browser": "./dist/phaser-hooks.js",
  "unpkg": "./dist/phaser-hooks.min.js",
  "jsdelivr": "./dist/phaser-hooks.min.js",
  "scripts": {
    "build": "tsc --build --force",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:report": "eslint src --ext .ts,.tsx --format html --output-file eslint-report.html",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test && lint-staged"
  },
  "keywords": [
    "phaser",
    "game-development",
    "hooks",
    "typescript"
  ],
  "author": "CassinoDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/renatocassino/phaser-toolkit/tree/main/packages/phaser-hooks#readme",
    "directory": "packages/phaser-hooks"
  },
  "bugs": {
    "url": "https://github.com/renatocassino/phaser-toolkit/issues"
  },
  "homepage": "https://github.com/renatocassino/phaser-toolkit/tree/main/packages/phaser-hooks#readme",
  "devDependencies": {
    "@eslint-recommended/eslint-config": "^28.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "phaser": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
